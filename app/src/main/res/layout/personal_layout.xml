<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/personal_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <system.dressup.view.CircularImageView
            android:id="@+id/header_pic"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/timg1"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:contentDescription="@string/user_header" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/personal_info_figure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_below="@id/personal_header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_info"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/personal_info_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:layout_below="@id/personal_info_figure">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_collection"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/personal_info_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:layout_below="@id/personal_info_collection">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_message"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/personal_info_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:layout_below="@id/personal_info_message">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_feedback"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/personal_info_safety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:layout_below="@id/personal_info_feedback">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_safety"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/personal_info_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:layout_below="@id/personal_info_safety">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_clear"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/personal_info_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:layout_below="@id/personal_info_clear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_about"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/personal_info_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:layout_below="@id/personal_info_about">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_exit"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>